# Taps
tap 'homebrew/cask'
tap 'homebrew/cask-fonts'
tap 'homebrew/cask-versions'
tap 'homebrew/bundle'

# Make sure apps get installed in system Applications dir
cask_args appdir: '/Applications'

# Install ZSH
brew 'zsh'

# Install Binaries
brew 'git'
brew 'tree'
brew 'node'
brew 'wget'
brew 'yarn'

# Apps
cask "google-chrome"
cask 'iterm2'
cask "visual-studio-code"